
{% include 'campaignsapp/header.html.twig' %}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <h4>Related</h4>
            <ul>
                <li><a href="../add-season">Add a new season</a></li>
            </ul>
        </div>
        <div class="col-sm-8 mainContent">
            <h4>Existing Seasons</h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>

                {% for season in seasons %}
                    <tr>
                        <td>{{ season.seasonid }}</td>
                        <td>{{ season.seasonname }}</td>
                        <td>{{ season.seasondescription}}</td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
        <div class="col-sm-1">
        </div>

    </div>
</div>
{% include 'campaignsapp/footer.html.twig' %}